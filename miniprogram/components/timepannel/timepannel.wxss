.fontgray{
  color: #666666;
}
.weekday{
  font-size: 20rpx;
}
.pannel{
  height: 120rpx;
  background: #FFFFCC;
  border-radius: 20rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.pannel .time{
  font-size: 28rpx;
  width: 260rpx;
}
.pannel .time .time-label{
  font-size: 24rpx;
  color: #666666;
}
.pannel .time .text{
  color: #666666;
}
.pannel .day{
  display: flex;
  align-items: center;
  font-size: 24rpx;
}
.pannel .day .icon{
  width: 30rpx;
  height: 30rpx;
  display: inline-block;
}