/* miniprogram/pages/checkOrder/index.wxss */
.check-order{
  padding: 30rpx;
}
.check-detail{
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
  display: flex;
}
.check-detail image{
  width: 280rpx;
  height: 210rpx;
  margin-right: 20rpx;
}
.check-info{
  flex: 1;
}
.check-title{
  margin-bottom: 20rpx;
}

.input-section{
  height: 100rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
}
.input-title{
  width: 180rpx;
}
.input-section .input{
  flex: 1;
}
.check-tips{
  margin-top: 30rpx;
  background: #eee;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
}

.check-bottom{
  position: fixed;
  height: 120rpx;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.bottom-price{
  margin-left: 30rpx;
  display: flex;
}
.price-list{
  margin-left: 20rpx;
}
.bottom-btn{
  margin-right: 30rpx;
  padding: 10rpx 20rpx;
  background: #88bac7;
  color: #fff;
  border-radius: 20rpx;
}